@import url('https://fonts.googleapis.com/css2?family=Geist+Mono:wght@400;700&display=swap');

* {
  margin: 0;
  padding: 0;
  box-sizing: border-box;
}

:root {
  --bg-primary: #ffffff;
  --bg-secondary: #fafafa;
  --bg-card: #ffffff;
  --bg-hover: #f5f5f5;

  --text-primary: #000000;
  --text-secondary: #525252;
  --text-tertiary: #737373;
  --text-muted: #a3a3a3;

  --border-color: #e5e5e5;
  --border-hover: #d4d4d4;
  --border-strong: #000000;

  --shadow-sm: 0 1px 2px 0 rgba(0, 0, 0, 0.05);
  --shadow-md: 0 4px 6px -1px rgba(0, 0, 0, 0.1);
  --shadow-lg: 0 10px 15px -3px rgba(0, 0, 0, 0.1);
}

body {
  margin: 0;
  background: var(--bg-primary);
  color: var(--text-primary);
  line-height: 1.5;
  -webkit-font-smoothing: antialiased;
  -moz-osx-font-smoothing: grayscale;
  font-family: 'Geist Mono', monospace;
  font-optical-sizing: auto;
  min-width: 320px;
  font-size: 16px;
}

.app {
  min-height: 100vh;
  display: flex;
  flex-direction: column;
  background-image: url('/bg1.png'), url('/bg2.png'), url('/bg3.png');
  background-size: 1207px, 900px, 1203px;
  background-position:
    calc(50% + 345px) -305px,
    calc(50% + 650px) 850px,
    calc(50% - 675px) 1682px;
  background-repeat: no-repeat, no-repeat, no-repeat;
  image-rendering: pixelated;
}

.navbar {
  background: var(--bg-primary);
  padding: 1rem 1.5rem;
}

.nav-container {
  max-width: 1440px;
  margin: 0 auto;
  display: grid;
  grid-template-columns: 200px 1fr;
  align-items: center;
  gap: 2rem;
}

.nav-brand {
  display: block;
  transition: opacity 0.2s ease;
}

.nav-brand:hover {
  opacity: 0.7;
}

.brand-logo {
  display: block;
  width: 92px;
  height: 23px;
}

.nav-content {
  display: flex;
  align-items: center;
  justify-content: space-between;
}

.nav-links {
  display: flex;
  gap: 2rem;
}

.nav-link {
  color: var(--text-secondary);
  text-decoration: none;
  font-weight: 400;
  font-size: 0.875rem;
  transition: color 0.2s ease;
  text-transform: uppercase;
  letter-spacing: 0.05em;
}

.nav-link:hover {
  color: var(--text-primary);
}

.nav-link.active {
  color: var(--text-primary);
  font-weight: 700;
}

.main-content {
  flex: 1;
  max-width: 1440px;
  width: 100%;
  margin: 0 auto;
  padding: 3rem 1.5rem;
}

.page {
  width: 100%;
}

.page-header {
  display: flex;
  align-items: center;
  justify-content: space-between;
  margin-bottom: 3rem;
  padding-bottom: 1.5rem;
  border-bottom: 1px solid var(--border-color);
}

.page-header h1 {
  font-size: 2.5rem;
  font-weight: 700;
  color: var(--text-primary);
  letter-spacing: -0.025em;
  text-transform: uppercase;
}

.page-stats {
  display: flex;
  gap: 1rem;
  align-items: center;
}

.stat-badge {
  padding: 0.5rem 1rem;
  background: var(--bg-primary);
  border: 1px solid var(--border-color);
  border-radius: 4px;
  font-size: 0.875rem;
  font-weight: 700;
  color: var(--text-secondary);
  text-transform: uppercase;
  letter-spacing: 0.05em;
}

.clear-filter {
  padding: 0.5rem 1rem;
  background: var(--text-primary);
  border: 1px solid var(--border-strong);
  border-radius: 4px;
  font-size: 0.875rem;
  font-weight: 700;
  color: var(--bg-primary);
  text-decoration: none;
  transition: all 0.2s ease;
  cursor: pointer;
  text-transform: uppercase;
  letter-spacing: 0.05em;
}

.clear-filter:hover {
  opacity: 0.8;
}

.search-bar {
  margin-bottom: 3rem;
}

.search-input {
  width: 100%;
  max-width: 600px;
  padding: 0.875rem 1rem;
  background: var(--bg-primary);
  border: 1px solid var(--border-color);
  border-radius: 4px;
  color: var(--text-primary);
  font-size: 1rem;
  font-family: 'Geist Mono', monospace;
  transition: all 0.2s ease;
  font-weight: 400;
}

.search-input:focus {
  outline: none;
  border-color: var(--border-strong);
  box-shadow: 0 0 0 3px rgba(0, 0, 0, 0.05);
}

.search-input::placeholder {
  color: var(--text-muted);
}

.table-container {
  background: var(--bg-card);
  border: 1px solid var(--border-color);
  border-radius: 8px;
  overflow: hidden;
}

.data-table {
  width: 100%;
  border-collapse: collapse;
}

.data-table thead {
  background: var(--bg-secondary);
}

.data-table th {
  padding: 1rem 1.5rem;
  text-align: left;
  font-size: 0.75rem;
  font-weight: 700;
  color: var(--text-tertiary);
  text-transform: uppercase;
  letter-spacing: 0.1em;
  border-bottom: 1px solid var(--border-color);
}

.data-table td {
  padding: 1.25rem 1.5rem;
  border-bottom: 1px solid var(--border-color);
  font-size: 0.875rem;
  color: var(--text-secondary);
  font-weight: 400;
}

.data-table tbody tr:last-child td {
  border-bottom: none;
}

.data-table tbody tr {
  transition: background 0.15s ease;
}

.data-table tbody tr:hover {
  background: var(--bg-hover);
}

.address {
  font-family: 'Geist Mono', monospace;
  color: var(--text-tertiary);
  font-size: 0.875rem;
  font-weight: 400;
}

.address-link {
  font-family: 'Geist Mono', monospace;
  color: var(--text-primary);
  text-decoration: underline;
  text-decoration-color: var(--border-color);
  text-underline-offset: 2px;
  transition: all 0.2s ease;
  font-size: 0.875rem;
  font-weight: 700;
}

.address-link:hover {
  text-decoration-color: var(--text-primary);
}

.badge {
  display: inline-flex;
  align-items: center;
  padding: 0.375rem 0.75rem;
  background: var(--bg-secondary);
  border: 1px solid var(--border-color);
  border-radius: 4px;
  font-size: 0.75rem;
  font-weight: 700;
  color: var(--text-secondary);
  text-transform: uppercase;
  letter-spacing: 0.05em;
}

.badge-success {
  background: rgba(34, 197, 94, 0.1);
  border-color: rgba(34, 197, 94, 0.3);
  color: #16a34a;
}

.badge-neutral {
  background: var(--bg-secondary);
  border-color: var(--border-color);
  color: var(--text-muted);
}

.status-badge {
  padding: 0.375rem 0.75rem;
  border-radius: 4px;
  font-size: 0.75rem;
  font-weight: 700;
  border: 1px solid;
  text-transform: uppercase;
  letter-spacing: 0.05em;
}

.status-badge.status-0 {
  background: rgba(34, 197, 94, 0.1);
  border-color: rgba(34, 197, 94, 0.3);
  color: #16a34a;
}

.status-badge.status-1 {
  background: rgba(245, 158, 11, 0.1);
  border-color: rgba(245, 158, 11, 0.3);
  color: #d97706;
}

.description {
  max-width: 320px;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
  color: var(--text-secondary);
}

.date {
  color: var(--text-tertiary);
  font-size: 0.875rem;
  font-weight: 400;
}

.loading,
.error,
.empty-state {
  padding: 4rem 2rem;
  text-align: center;
  color: var(--text-secondary);
  background: var(--bg-card);
  border: 1px solid var(--border-color);
  border-radius: 8px;
  font-weight: 700;
  text-transform: uppercase;
  letter-spacing: 0.05em;
}

.error {
  color: #dc2626;
  background: rgba(239, 68, 68, 0.05);
  border-color: rgba(239, 68, 68, 0.2);
}

.detail-header {
  margin-bottom: 3rem;
  padding-bottom: 1.5rem;
  border-bottom: 1px solid var(--border-color);
}

.detail-header h1 {
  font-size: 2rem;
  font-weight: 700;
  margin-bottom: 1rem;
  color: var(--text-primary);
  letter-spacing: -0.025em;
  text-transform: uppercase;
}

.address-display {
  font-family: 'Geist Mono', monospace;
  color: var(--text-secondary);
  font-size: 0.875rem;
  padding: 1rem 1.25rem;
  background: var(--bg-secondary);
  border: 1px solid var(--border-color);
  border-radius: 4px;
  word-break: break-all;
  font-weight: 400;
}

.detail-grid {
  display: grid;
  gap: 2rem;
  grid-template-columns: repeat(auto-fit, minmax(400px, 1fr));
}

.detail-card {
  background: var(--bg-card);
  border: 1px solid var(--border-color);
  border-radius: 8px;
  padding: 2rem;
  transition: all 0.2s ease;
}

.detail-card:hover {
  border-color: var(--border-hover);
  box-shadow: var(--shadow-md);
}

.detail-card h2 {
  font-size: 1.25rem;
  font-weight: 700;
  margin-bottom: 1.5rem;
  color: var(--text-primary);
  letter-spacing: -0.01em;
  text-transform: uppercase;
}

.detail-row {
  display: flex;
  justify-content: space-between;
  align-items: flex-start;
  padding: 1rem 0;
  border-bottom: 1px solid var(--border-color);
  gap: 1rem;
}

.detail-row:last-child {
  border-bottom: none;
}

.detail-row .label {
  color: var(--text-tertiary);
  font-size: 0.875rem;
  font-weight: 700;
  min-width: 140px;
  text-transform: uppercase;
  letter-spacing: 0.05em;
}

.detail-row .value {
  flex: 1;
  text-align: right;
  font-size: 0.875rem;
  word-break: break-all;
  color: var(--text-secondary);
  font-weight: 400;
}

.signers-list,
.schema-fields {
  display: flex;
  flex-direction: column;
  gap: 0.75rem;
}

.signer-item,
.field-item {
  display: flex;
  align-items: center;
  gap: 1rem;
  padding: 1rem 1.25rem;
  background: var(--bg-secondary);
  border: 1px solid var(--border-color);
  border-radius: 4px;
  transition: all 0.2s ease;
}

.signer-item:hover,
.field-item:hover {
  background: var(--bg-hover);
  border-color: var(--border-hover);
}

.signer-index,
.field-index {
  color: var(--text-muted);
  font-size: 0.875rem;
  font-weight: 700;
  min-width: 32px;
}

.field-name {
  flex: 1;
  font-weight: 700;
  font-size: 0.875rem;
  color: var(--text-primary);
}

.field-type {
  color: var(--text-primary);
  font-size: 0.75rem;
  font-weight: 700;
  padding: 0.375rem 0.75rem;
  background: var(--bg-secondary);
  border: 1px solid var(--border-color);
  border-radius: 4px;
  text-transform: uppercase;
  letter-spacing: 0.05em;
}

.stats-grid {
  display: grid;
  grid-template-columns: repeat(auto-fit, minmax(240px, 1fr));
  gap: 2rem;
}

.stat-item {
  padding: 2rem;
  background: var(--bg-card);
  border: 1px solid var(--border-color);
  border-radius: 8px;
  text-align: center;
  transition: all 0.2s ease;
}

.stat-item:hover {
  border-color: var(--border-strong);
  box-shadow: var(--shadow-lg);
  transform: translateY(-2px);
}

.stat-value {
  font-size: 3.5rem;
  font-weight: 700;
  color: var(--text-primary);
  margin-bottom: 0.5rem;
  line-height: 1;
  letter-spacing: -0.025em;
}

.stat-label {
  font-size: 0.875rem;
  font-weight: 700;
  color: var(--text-tertiary);
  margin-bottom: 0.75rem;
  text-transform: uppercase;
  letter-spacing: 0.1em;
}

.stat-link {
  display: inline-block;
  color: var(--text-primary);
  text-decoration: underline;
  text-decoration-color: var(--border-color);
  text-underline-offset: 2px;
  font-size: 0.875rem;
  font-weight: 700;
  transition: all 0.2s ease;
  text-transform: uppercase;
  letter-spacing: 0.05em;
}

.stat-link:hover {
  text-decoration-color: var(--text-primary);
}

.json-data {
  background: var(--bg-secondary);
  border: 1px solid var(--border-color);
  border-radius: 4px;
  padding: 1.25rem;
  overflow-x: auto;
  font-family: 'Geist Mono', monospace;
  font-size: 0.875rem;
  color: var(--text-secondary);
  line-height: 1.6;
  font-weight: 400;
}

.raw-data {
  display: flex;
  flex-direction: column;
  gap: 1.25rem;
}

.data-bytes {
  color: var(--text-tertiary);
  font-size: 0.875rem;
  font-weight: 700;
  text-transform: uppercase;
  letter-spacing: 0.05em;
}

.hex-data {
  background: var(--bg-secondary);
  border: 1px solid var(--border-color);
  border-radius: 4px;
  padding: 1.25rem;
  overflow-x: auto;
  font-family: 'Geist Mono', monospace;
  font-size: 0.75rem;
  color: var(--text-muted);
  line-height: 1.8;
  word-break: break-all;
  font-weight: 400;
}

.footer {
  background: var(--bg-primary);
  background-image: url('/footer-bg.png');
  background-size: 1440px;
  background-position: center bottom;
  background-repeat: no-repeat;
  border-top: 1px solid var(--border-color);
  padding: 4rem 1.5rem;
  margin-top: 5rem;
}

.footer-content {
  max-width: 1440px;
  margin: 0 auto;
  text-align: center;
}

.footer-content > p {
  color: var(--text-secondary);
  font-size: 0.875rem;
  margin-bottom: 1.5rem;
  font-weight: 700;
  text-transform: uppercase;
  letter-spacing: 0.05em;
}

.footer-links {
  display: flex;
  gap: 2rem;
  justify-content: center;
  align-items: center;
}

.footer-link {
  color: var(--text-primary);
  text-decoration: underline;
  text-decoration-color: var(--border-color);
  text-underline-offset: 2px;
  font-weight: 700;
  font-size: 0.875rem;
  transition: all 0.2s ease;
  text-transform: uppercase;
  letter-spacing: 0.05em;
}

.footer-link:hover {
  text-decoration-color: var(--text-primary);
}

@media screen and (max-width: 639px) {
  .app {
    background-size: 840px, 600px, 0;
    background-position:
      calc(50% + 10px) 60px,
      calc(50% + 300px) 1200px;
  }

  .nav-container {
    grid-template-columns: 1fr;
    gap: 1rem;
  }

  .nav-content {
    flex-direction: column;
    align-items: flex-start;
    gap: 1rem;
  }

  .nav-links {
    flex-direction: column;
    gap: 0.75rem;
  }

  .main-content {
    padding: 2rem 1rem;
  }

  .page-header {
    flex-direction: column;
    align-items: flex-start;
    gap: 1rem;
  }

  .page-header h1 {
    font-size: 1.875rem;
  }

  .detail-grid {
    grid-template-columns: 1fr;
  }

  .data-table {
    font-size: 0.875rem;
  }

  .data-table th,
  .data-table td {
    padding: 0.875rem 1rem;
  }

  .description {
    max-width: 160px;
  }

  .stat-value {
    font-size: 2.5rem;
  }

  .footer-links {
    flex-direction: column;
    gap: 0.75rem;
  }

  .footer {
    background-size: 840px;
  }
}
